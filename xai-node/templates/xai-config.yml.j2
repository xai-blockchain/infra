# XAI Node Configuration

chain:
  id: {{ chain_id }}
  data_dir: {{ daemon_home }}/data

network:
  rpc_port: {{ rpc_port }}
  p2p_port: {{ p2p_port }}
  ws_port: {{ ws_port }}
  bind_address: "0.0.0.0"

api:
  enabled: true
  cors_origins: []

logging:
  level: INFO
  file: {{ daemon_home }}/logs/xai.log

metrics:
  enabled: true
  port: 9100
